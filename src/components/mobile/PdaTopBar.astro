---
interface Props {
  title?: string;
}

const { title = 'naterichardson.com' } = Astro.props;
---

<div class="pda-topbar">
  <span class="pda-topbar-title">{title}</span>
  <span class="pda-topbar-status">
    <span id="pda-clock">12:00</span>
    <span style="font-size: 9px;">▮▮▮</span>
  </span>
</div>

<style>
  .pda-topbar {
    background: var(--win95-grey);
    border-bottom: 2px solid;
    border-color: var(--win95-white) var(--win95-grey) var(--win95-darkgrey) var(--win95-grey);
    box-shadow: inset 0 -1px 0 var(--win95-darkgrey);
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 6px;
    font-size: 11px;
    font-weight: bold;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  .pda-topbar-title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .pda-topbar-status {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--win95-darkgrey);
    font-weight: normal;
  }
</style>

<script>
  function updatePdaClock() {
    const clock = document.getElementById('pda-clock');
    if (clock) {
      const now = new Date();
      clock.textContent = now.toLocaleTimeString('en-US', {
        hour: 'numeric',
        minute: '2-digit',
        hour12: false,
      });
    }
  }
  updatePdaClock();
  setInterval(updatePdaClock, 30000);
</script>
