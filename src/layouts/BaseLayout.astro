---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  canonicalPath?: string;
}

const {
  title = 'Nate Richardson | Frontend Architect & Developer',
  description = 'Portfolio of Nate Richardson, a frontend-focused architect and developer with experience in building modern web applications.',
  canonicalPath = '/',
} = Astro.props;

const siteUrl = 'https://naterichardson.com';
const canonicalUrl = `${siteUrl}${canonicalPath}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}/images/logo_cropped.png`} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}/images/nate_richardson_headshot2.jpg`} />

    <meta name="author" content="Nate Richardson" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#008080" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Nate Richardson",
      "url": siteUrl,
      "image": `${siteUrl}/images/nate_richardson_headshot2.jpg`,
      "jobTitle": "Frontend Architect, Web Developer",
      "description": "Frontend-focused architect, all-around builder, and breakfast enthusiast.",
      "sameAs": [
        "https://github.com/naterchrdsn",
        "https://www.linkedin.com/in/naterchrdsn/"
      ]
    })} />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to content</a>
    <main id="main-content">
      <slot />
    </main>
  </body>
</html>
